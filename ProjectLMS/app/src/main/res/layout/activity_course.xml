<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="185dp"
        android:drawableLeft="@drawable/baseline_dehaze"
        android:drawablePadding="5dp"
        android:text="Course Overview"
        android:textColor="@color/Lavender"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:fillViewport="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="240dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="160dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/lavender_border">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SE 303.3"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/darkblue"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mobile Application Development"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/darkblue"/>

                <Button
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/module"
                    android:text="VIEW"
                    android:textSize="18sp"
                    app:cornerRadius = "20dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="160dp"
                android:orientation="vertical"
                android:layout_gravity="end"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/lavender_border">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CS 301.3"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/darkblue"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="IT Project Management"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/darkblue"/>

                <Button
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/module1"
                    android:text="VIEW"
                    android:textSize="18sp"
                    app:cornerRadius = "20dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="160dp"
                android:orientation="vertical"
                android:layout_marginTop="170dp"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/lavender_border">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CS 304.3"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/darkblue"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Advanced Database Management"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/darkblue"/>

                <Button
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/module2"
                    android:text="VIEW"
                    android:textSize="18sp"
                    app:cornerRadius = "20dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="160dp"
                android:orientation="vertical"
                android:layout_gravity="end"
                android:layout_marginTop="170dp"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/lavender_border">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CS 306.3"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/darkblue"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Information Security"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/darkblue"/>

                <Button
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/module3"
                    android:text="VIEW"
                    android:textSize="18sp"
                    app:cornerRadius = "20dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="160dp"
                android:orientation="vertical"
                android:layout_marginTop="340dp"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/lavender_border">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SE 304.3"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/darkblue"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Software Quality Assurance"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/darkblue"/>

                <Button
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:text="VIEW"
                    android:textSize="18sp"
                    app:cornerRadius = "20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="160dp"
                android:orientation="vertical"
                android:layout_gravity="end"
                android:gravity="center"
                android:layout_marginTop="340dp"
                android:padding="10dp"
                android:background="@drawable/lavender_border">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MA 301.3"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/darkblue"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Advanced Mathematics"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/darkblue"/>

                <Button
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:text="VIEW"
                    android:textSize="18sp"
                    app:cornerRadius = "20dp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="20dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:background="@drawable/logo1"/>

        <ImageView
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:layout_marginStart="120dp"
            android:background="@drawable/logo2"/>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="@color/Lavender"
        app:title="StudyStream"
        app:titleTextColor="@color/white"
        app:titleMarginStart="30dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintTop_toTopOf = "parent"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomNavigationView"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_background"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:elevation="2dp"
        app:menu="@menu/bottom_menu"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"
        />

</RelativeLayout>
